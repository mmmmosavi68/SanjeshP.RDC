@model SanjeshP.RDC.Web.Models.Identity.RecoveryPasswordDTO
@{
    ViewData["Title"] = "RecoveryPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3 class="title">بازیابی گذرواژه</h3>
<div class="login-line"></div>

@if (TempData["Result_CheckUserPassword"] != null)
{
    <div class="alert alert-success">
        <span>
            کاربر مورد نظر یافت شد.
        </span>
    </div>
}
<div class="errorMessages" style="display: none;"></div>
<div class="warningMessages" style="display: none;"></div>
<form method="post" asp-controller="Login" asp-action="Login">
    <div class="row align-items-center mt-2">
        <div>
            <label class="radio-container">
                <input type="radio" name="Uu" value="password" checked="checked">ورود با کد ملی
                <span class="checkmark"></span>
            </label>
            <label class="radio-container">
                <input type="radio" name="Uu" value="password-foreign">ورود با کد فیدا (اتباع خارجی)
                <span class="checkmark"></span>
            </label>
        </div>
        <div class="col-md-12 mt-2">
            <div class="row align-items-center">
                <div class="col-md-3 d-inline-block"><span>کد ملی : </span></div>
                <div class="col-md-9 d-inline-block">
                    <input asp-for="NationalCode" type="text" class="form-control mt-4" placeholder=@Html.DisplayNameFor(m=>m.NationalCode)>
                </div>
            </div>
        </div>
        <div class="col-md-12 mt-2">
            <div class="row align-items-center">
                <div class="col-md-3 d-inline-block"><span>شماره همراه: </span></div>
                <div class="col-md-9 d-inline-block">
                    <input asp-for="Mobile" type="password" class="form-control mt-4" placeholder=@Html.DisplayNameFor(m=>m.Mobile)>
                </div>
            </div>
        </div>
        <div style="text-align: right ">
            <button type="submit" class="btn btn-success login-button">بازیابی گذرواژه</button>
        </div>
    </div>
</form>
<div class="login-line"></div>
<p class="registration-text mt-2">برگشت به صفحه <a asp-controller="Login" asp-action="Login"> ورود به سامانه</a></p>


