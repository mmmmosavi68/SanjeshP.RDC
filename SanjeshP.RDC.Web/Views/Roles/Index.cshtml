@model IEnumerable<SanjeshP.RDC.Entities.User.Role>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">ایجاد نقش جدید</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RoleTitleEn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NormalizedRoleTitleEn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoleTitleFa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RoleTitleEn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NormalizedRoleTitleEn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoleTitleFa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id"></a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
