@using SanjeshP.RDC.Web.SharedViewModels
@model ForgotPasswordViewModel

<div class="container">
    <h2>بازیابی رمز عبور</h2>
    <form asp-action="ForgotPassword" method="post">
        <div class="form-group">
            <label for="emailOrPhone">ایمیل یا شماره تلفن:</label>
            <input type="text" class="form-control" id="emailOrPhone" name="EmailOrPhoneNumber" asp-for="EmailOrPhoneNumber">
            <span asp-validation-for="EmailOrPhoneNumber" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">ارسال کد تایید</button>
    </form>
</div>
