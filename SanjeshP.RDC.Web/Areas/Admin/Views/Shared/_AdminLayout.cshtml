<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>سامانه بررسی مدارک</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="/Admin/plugins/fontawesome-free/css/all.min.css">    <!-- Font Awesome -->
    <!--<link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">   Ionicons -->
    <link rel="stylesheet" href="/Admin/plugins/icheck-bootstrap/icheck-bootstrap.min.css">    <!-- iCheck -->
    <link rel="stylesheet" href="/Admin/css/adminlte.min.css">    <!-- Theme style -->
    <link rel="stylesheet" href="/Admin/plugins/overlayScrollbars/css/OverlayScrollbars.min.css">    <!-- overlayScrollbars -->
    <link rel="stylesheet" href="/Admin/css/rtl.css">
    <link rel="stylesheet" href="/Admin/plugins/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css">
    <link rel="stylesheet" href="/css/spinner.css" />
    <link rel="stylesheet" href="/Admin/plugins/iziToast/iziToast.min.css" />


    <style>
        .content-wrapper {
            background-image: url(/img/5.jpg);
        }

        .modal-header {
            cursor: move;
        }

        .back_img {
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            background-image: url(https://payeh1.sanjeshp.ir/content/img/bg1.jpg);
        }

            .back_img::after {
                max-height: calc(100% -35px);
                height: calc(100% - 35px);
                overflow-y: scroll;
                position: relative;
            }

        .swal2-popup {
            direction: rtl !important;
        }

            .swal2-popup.swal2-success {
                background-color: #28a745 !important;
            }

            .swal2-popup.swal2-info {
                background-color: #17a2b8 !important;
            }

            .swal2-popup.swal2-error {
                background-color: #dc3545 !important;
            }

            .swal2-popup.swal2-warning {
                background-color: #ffc107 !important;
            }

            .swal2-popup.swal2-question {
                background-color: #6c757d !important;
            }

        .iziToast {
            background: #fff !important;
            box-shadow: 0 0 1px rgba(0, 0, 0, .075), 0 1px 2px rgba(0, 0, 0, .075), 1px 2px 4px rgba(0, 0, 0, .075), 1px 3px 8px rgba(0, 0, 0, .075), 2px 4px 16px rgba(0, 0, 0, .075) !important;
        }

        .iziToast-success .iziToast-message,
        .iziToast-success .iziToast-title {
            color: #28a745 !important; /* سبز */
        }

        .iziToast-error.iziToast-message,
        .iziToast-error.iziToast-title {
            color: #dc3545 !important; /* قرمز
                                    }
    </style>
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
        <!-- Preloader -->
        <div class="preloader flex-column justify-content-center align-items-center">
            سامانه بررسی مدارک
            <img class="animation__shake" src="/Admin/img/AdminLTELogo.png" alt="AdminLTELogo" height="60" width="60">
        </div>

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a asp-controller="Home" asp-action="index" class="nav-link">صفحه نخست</a>
                </li>
            </ul>
            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                        <i class="fas fa-expand-arrows-alt"></i>
                    </a>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4 back_img">
            <!-- Brand Logo -->
            <a href="index3.html" class="brand-link">
                <img src="/Admin/img/logo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light">سامانه بررسی مدارک</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="/Admin/img/user.jpg" class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="row">
                        <div class="info col-12">
                            <a href="#" class="d-block">@User.Identity.Name</a>
                        </div>
                        <div class="info col-12">
                            <a href="#" class="d-block">@User.FindFirst("RoleTitle_Fa").Value.ToString()</a>
                        </div>
                    </div>
                </div>

                <!-- SidebarSearch Form -->
                <div class="form-inline">
                    <div class="input-group" data-widget="sidebar-search">
                        <div class="input-group-append">
                            <button class="btn btn-sidebar">
                                <i class="fas fa-search fa-fw"></i>
                            </button>
                        </div>
                        <input class="form-control form-control-sidebar" id="side_search" type="search" placeholder="جستجو صفحه" aria-label="Search">
                    </div>
                </div>

                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        @await Component.InvokeAsync("MenuBar")
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper p-4">
            @RenderBody()
        </div>
        <!-- /.content-wrapper -->
        <footer class="main-footer">
            <strong>کپی رایت &copy; 2014-2021 <a href="">میر محمد موسوی | Mir Mohammad Mousavi</a>.</strong>
            تمام حقوق محفوظ می باشد.
            <div class="float-right d-none d-sm-inline-block">
                <b>نسخه</b> 3.2.0
            </div>
        </footer>
    </div>

    <div id="overlay" onclick="off()">
        <div class="w-100 d-flex justify-content-center align-items-center">
            <div class="spinner"></div>
        </div>
    </div>

   

    <script src="/Admin/plugins/jquery/jquery.min.js"></script>    <!-- jQuery v3.6.0 -->
    <script src="/Admin/plugins/jquery-ui/jquery-ui.min.js"></script>    <!-- jQuery UI 1.11.4 -->
    <!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
    <script>
        $.widget.bridge('uibutton', $.ui.button)
    </script>
    <script src="/admin/plugins/bootstrap/js/bootstrap.min.js"></script>
    <script src="/Admin/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>    <!-- Bootstrap 4 -->
    <script src="/Admin/plugins/moment/moment.min.js"></script>
    <script src="/Admin/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>     <!-- overlayScrollbars -->
    <script src="/Admin/js/adminlte.js"></script>    <!-- AdminLTE App -->

    <script src="/admin/plugins/sweetalert2/sweetalert2.all.min.js"></script>
    <script src="/admin/plugins/sweetalert2/sweetalert2.min.js"></script>
    <script src="/Admin/plugins/iziToast/iziToast.min.js"></script>

    <script>
        $(function () {
            $('a').tooltip()
        })
        var Toast = Swal.mixin({
            toast: true,
            position: 'top-end',
            showConfirmButton: false,
            timer: 6000,
            timerProgressBar: true,
            showCloseButton: true,
            grow: true,
            didOpen: (toast) => {
                toast.onmouseenter = Swal.stopTimer;
                toast.onmouseleave = Swal.resumeTimer;
            }
        })
        iziToast.settings({
            position: 'topRight',
            timeout: 5000,
            rtl: true,
            animateInside: true,
            progressBar: true,
            success: {
                titleColor: '#28a745',
                messageColor: '#28a745'
            },
            error: {
                titleColor: '#dc3545',
                messageColor: '#dc3545'
            }

        });
        function on() {
            document.getElementById("overlay").style.display = "flex";
        }

        function off() {
            document.getElementById("overlay").style.display = "none";
        }


    </script>


    @RenderSection("Scripts", required: false)
</body>
</html>


