@model SanjeshP.RDC.Web.Areas.Admin.Models.DTO_Group.GroupSelectDto

<div class="row">
    <div class="col-md-12">
        <form id="create-group-form" asp-action="@(Model == null ? "CreateGroup" : "EditGroup")" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" id="validation-summary"></div>

            <div class="form-group">
                <label asp-for="UserGroupText" class="control-label col-sm-4"></label>
                <input asp-for="UserGroupText" class="form-control col-sm-7 d-inline-block" />
                <span asp-validation-for="UserGroupText" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" asp-for="IsActive" class="custom-control-input" id="IsActive" />
                    <label class="custom-control-label" for="IsActive">
                        @Html.DisplayNameFor(model => model.IsActive)
                    </label>
                </div>
            </div>

            @if (Model != null)
            {
                @Html.HiddenFor(model => model.Id)
            }

            <div class="form-group">
                <input type="button" id="save-button" value="@(Model == null ? "افزودن گروه" : "ویرایش گروه")"
                       class="btn @(Model == null ? "btn-success" : "btn-warning")" />
            </div>
        </form>
    </div>
</div>

@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
<script>
    $(document).ready(function () {
        $('#save-button').click(function () {
            // تنظیم URL مناسب براساس نوع عملیات
            const actionUrl = '@(Model == null ? Url.Action("CreateGroup", "Groups") : Url.Action("EditGroup", "Groups"))';

            // ارسال اطلاعات فرم به سمت سرور
            $.ajax({
                url: actionUrl,
                type: 'POST',
                data: $('#create-group-form').serialize(),
                success: function (response) {
                    if (response.isSuccess) {
                        // نمایش پیام موفقیت
                        iziToast.success({
                            message: response.message,
                        });
                         $('#Modal_AddEdit').modal('hide');
                        // بروزرسانی لیست گروه‌ها
                        $("#groupList").load("/Admin/Groups/GroupsList");
                    } else {
                        // نمایش خطاها در صورت وجود
                        iziToast.error({
                            message: response.message,
                        });
                    }
                },
                error: function (xhr, status, error) {
                    console.error('Error:', error);
                    iziToast.error({
                        message: 'خطایی رخ داده است. لطفاً دوباره تلاش کنید.'
                    });
                }
            });
        });
    });
</script>
